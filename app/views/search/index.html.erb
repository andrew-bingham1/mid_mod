<h1 id="member-count"> Nation Member Count: <%= @members.count %> </h1>

<div id="twenty-five-members">
  <h2> Members Details </h2>
  <ul>
    <% @twenty_five_members.each do |member| %>
      <div id="member-<%= member[:_id] %>"> 
        <h3> Name: <%= member[:name] %> </h3>

        <img src="<%= member[:photoUrl] %>">

        <li> Allies: 
          <% if member[:allies].empty? %>
              None
          <% else %>
            <% member[:allies].each do |ally| %>
              <%= ally %>
            <% end %>
          <% end %>
        </li>

        <li> Enemies:
          <% if member[:enemies].empty? %>
            None
          <% else %>
            <% member[:enemies].each do |enemy| %>
              <%= enemy %> 
            <% end %>
          <% end %>
        </li>

        <li> Affiliations: <%= member[:affiliation] %> </li>
      </div> <br><br><br>
    <% end %>
  </ul>
</div>


    